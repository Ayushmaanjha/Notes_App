<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/textedit_shape"
    android:layout_margin="12dp">


                <TextView
                    android:id="@+id/title_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/disp_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Description of the Title"
                    android:textColor="#302E2E"
                    android:gravity="clip_horizontal"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="@+id/title_rv"
                    app:layout_constraintTop_toBottomOf="@+id/title_rv" />
</androidx.constraintlayout.widget.ConstraintLayout>